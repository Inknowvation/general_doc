# the following two lines give a two-line status, with the current window highlighted
hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%H%? %1`%?%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]'

# increase scrollback buffer
defscrollback 1000

# no welcome message
startup_message off


# add some default screens, default screen â–’0 to the webproject folder
chdir /webprojects/
screen -t webproject 0
chdir
screen
screen

# select first screen
select 1
